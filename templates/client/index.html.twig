{% extends 'base.html.twig' %}

{% block title %}Demande de contact de {{ contact.name }} {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Vous avez reçu une demande de contact :
    <h2>Prénom : {{ contact.firstName}}</h2>
    <h2>Nom : {{ contact.name}}</h2>
    <h2>{{ contact.age}} ans</h2>
    <h2>Newsletter : 
    {% if contact.newsletter == true %}
        acceptée
    {% endif %}
    {% if contact.newsletter == false %}
        refusée
    {% endif %}
    </h2>





</div>
{% endblock %}
